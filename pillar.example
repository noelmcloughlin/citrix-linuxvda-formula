linuxvda:
  citrix:
    home: /opt/Citrix
    source_url:
    src_hashfile:
    src_hashsum:
  env:
    variables:
      # These values are formula defaults
      CTX_XDL_SITE_NAME: example.com
      CTX_XDL_LDAP_LIST: ldap1.example.com ldap2.example.com
      CTX_XDL_SEARCH_BASE: search-base
      CTX_XDL_DDC_LIST: delivery-controller1.example.com dc2.example.com
      CTX_XDL_SUPPORT_DDC_AS_CNAME: N
      CTX_XDL_VDA_PORT: 80
      CTX_XDL_REGISTER_SERVICE: Y
      CTX_XDL_ADD_FIREWALL_RULES: Y
      CTX_XDL_AD_INTEGRATION: 1
      CTX_XDL_HDX_3D_PRO: Y
      CTX_XDL_VDI_MODE: N
      CTX_XDL_START_SERVICE: Y
